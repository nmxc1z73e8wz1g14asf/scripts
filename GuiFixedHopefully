-- Cleanup old GUI
if game.CoreGui:FindFirstChild("DarkPowerGUI") then
    game.CoreGui.DarkPowerGUI:Destroy()
end

local Players = game:GetService("Players")
local player = Players.LocalPlayer
local UserInputService = game:GetService("UserInputService")

local function getCharacter()
    local char = player.Character or player.CharacterAdded:Wait()
    local hum = char:WaitForChild("Humanoid")
    local root = char:WaitForChild("HumanoidRootPart")
    return char, hum, root
end

-- Create GUI
local gui = Instance.new("ScreenGui")
gui.Name = "DarkPowerGUI"
gui.Parent = game.CoreGui

local frame = Instance.new("Frame")
frame.Name = "MainFrame"
frame.Size = UDim2.new(0, 400, 0, 300)
frame.Position = UDim2.new(0.5, -200, 0.5, -150)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BorderSizePixel = 0
frame.Parent = gui

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 15)
corner.Parent = frame

-- Header (Drag Handle)
local header = Instance.new("Frame")
header.Name = "Header"
header.Size = UDim2.new(1, 0, 0, 40)
header.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
header.Parent = frame

local headerCorner = Instance.new("UICorner")
headerCorner.CornerRadius = UDim.new(0, 15)
headerCorner.Parent = header

local title = Instance.new("TextLabel")
title.Text = "DarkPower GUI"
title.Font = Enum.Font.GothamBold
title.TextSize = 22
title.TextColor3 = Color3.fromRGB(220, 220, 220)
title.BackgroundTransparency = 1
title.Size = UDim2.new(1, -100, 1, 0)
title.Position = UDim2.new(0, 15, 0, 0)
title.TextXAlignment = Enum.TextXAlignment.Left
title.Parent = header

local closeBtn = Instance.new("TextButton")
closeBtn.Text = "âœ•"
closeBtn.Font = Enum.Font.GothamBold
closeBtn.TextSize = 24
closeBtn.TextColor3 = Color3.fromRGB(255, 100, 100)
closeBtn.BackgroundTransparency = 1
closeBtn.Size = UDim2.new(0, 40, 1, 0)
closeBtn.Position = UDim2.new(1, -45, 0, 0)
closeBtn.Parent = header

-- Content Area
local contentArea = Instance.new("Frame")
contentArea.Size = UDim2.new(1, 0, 1, -40)
contentArea.Position = UDim2.new(0, 0, 0, 40)
contentArea.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
contentArea.Parent = frame

local contentCorner = Instance.new("UICorner")
contentCorner.CornerRadius = UDim.new(0, 12)
contentCorner.Parent = contentArea

-- Create Buttons
local function createButton(text, callback)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(1, -20, 0, 40)
    btn.Position = UDim2.new(0, 10, 0, 10)
    btn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.Font = Enum.Font.Gotham
    btn.TextSize = 18
    btn.Text = text
    btn.BorderSizePixel = 0
    btn.Parent = contentArea
    
    local btnCorner = Instance.new("UICorner")
    btnCorner.CornerRadius = UDim.new(0, 8)
    btnCorner.Parent = btn
    
    btn.MouseButton1Click:Connect(callback)
    return btn
end

-- Character Buttons
createButton("Speed Boost (75)", function()
    local _, hum = getCharacter()
    if hum then hum.WalkSpeed = 75 end
end)

createButton("God Mode", function()
    local _, hum = getCharacter()
    if hum then
        hum.MaxHealth = math.huge
        hum.Health = math.huge
    end
end)

createButton("High Jump (200)", function()
    local _, hum = getCharacter()
    if hum then hum.JumpPower = 200 end
end)

createButton("Reset", function()
    local _, hum = getCharacter()
    if hum then
        hum.WalkSpeed = 16
        hum.JumpPower = 50
        hum.MaxHealth = 100
        hum.Health = 100
    end
end)

-- Teleport Buttons
createButton("Jungle Island", function()
    local _, _, root = getCharacter()
    if root then
        root.CFrame = CFrame.new(Vector3.new(-8514, 50, 2393) + Vector3.new(0,5,0))
    end
end)

createButton("Frozen Island", function()
    local _, _, root = getCharacter()
    if root then
        root.CFrame = CFrame.new(Vector3.new(-2738, 25, -405) + Vector3.new(0,5,0))
    end
end)

createButton("Legend Island", function()
    local _, _, root = getCharacter()
    if root then
        root.CFrame = CFrame.new(Vector3.new(4416, 1001, -3858) + Vector3.new(0,5,0))
    end
end)

createButton("Mythical Island", function()
    local _, _, root = getCharacter()
    if root then
        root.CFrame = CFrame.new(Vector3.new(2397, 15, 1072) + Vector3.new(0,5,0))
    end
end)

-- Drag Functionality
local dragInput = nil
local dragStart = nil
local startPos = nil

local function update(input)
    local delta = input.Position - dragStart
    frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

header.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragStart = input.Position
        startPos = frame.Position
        
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragInput = nil
            end
        end)
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput then
        update(input)
    end
end)

-- Close Button
closeBtn.MouseButton1Click:Connect(function()
    gui:Destroy()
end)
