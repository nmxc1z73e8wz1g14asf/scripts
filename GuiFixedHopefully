-- Cleanup old GUI
if game.CoreGui:FindFirstChild("DarkPowerGUI") then
    game.CoreGui.DarkPowerGUI:Destroy()
end

local Players = game:GetService("Players")
local player = Players.LocalPlayer
local UserInputService = game:GetService("UserInputService")

local function getCharacter()
    local char = player.Character or player.CharacterAdded:Wait()
    local hum = char:WaitForChild("Humanoid")
    local root = char:WaitForChild("HumanoidRootPart")
    return char, hum, root
end

local gui = Instance.new("ScreenGui")
gui.Name = "DarkPowerGUI"
gui.ResetOnSpawn = false
gui.Parent = game.CoreGui

local frame = Instance.new("Frame")
frame.Name = "MainFrame"
frame.Size = UDim2.new(0, 400, 0, 300)
frame.Position = UDim2.new(0.5, -200, 0.5, -150)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BorderSizePixel = 0
frame.Parent = gui

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 15)
corner.Parent = frame

-- Header (Drag Handle)
local header = Instance.new("Frame")
header.Name = "Header"
header.Size = UDim2.new(1, 0, 0, 40)
header.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
header.Parent = frame

local headerCorner = Instance.new("UICorner")
headerCorner.CornerRadius = UDim.new(0, 15)
headerCorner.Parent = header

local title = Instance.new("TextLabel")
title.Text = "DarkPower GUI"
title.Font = Enum.Font.GothamBold
title.TextSize = 22
title.TextColor3 = Color3.fromRGB(220, 220, 220)
title.BackgroundTransparency = 1
title.Size = UDim2.new(1, -100, 1, 0)
title.Position = UDim2.new(0, 15, 0, 0)
title.TextXAlignment = Enum.TextXAlignment.Left
title.Parent = header

local closeBtn = Instance.new("TextButton")
closeBtn.Name = "CloseButton"
closeBtn.Text = "âœ•"
closeBtn.Font = Enum.Font.GothamBold
closeBtn.TextSize = 24
closeBtn.TextColor3 = Color3.fromRGB(255, 100, 100)
closeBtn.BackgroundTransparency = 1
closeBtn.Size = UDim2.new(0, 40, 1, 0)
closeBtn.Position = UDim2.new(1, -45, 0, 0)
closeBtn.Parent = header

local minBtn = Instance.new("TextButton")
minBtn.Name = "MinButton"
minBtn.Text = "-"
minBtn.Font = Enum.Font.GothamBold
minBtn.TextSize = 28
minBtn.TextColor3 = Color3.fromRGB(220, 220, 220)
minBtn.BackgroundTransparency = 1
minBtn.Size = UDim2.new(0, 40, 1, 0)
minBtn.Position = UDim2.new(1, -90, 0, 0)
minBtn.Parent = header

-- Left panel
local leftPanel = Instance.new("Frame")
leftPanel.Name = "LeftPanel"
leftPanel.Size = UDim2.new(0, 130, 1, -40)
leftPanel.Position = UDim2.new(0, 0, 0, 40)
leftPanel.BackgroundTransparency = 1
leftPanel.Parent = frame

local leftLayout = Instance.new("UIListLayout")
leftLayout.Padding = UDim.new(0, 10)
leftLayout.FillDirection = Enum.FillDirection.Vertical
leftLayout.SortOrder = Enum.SortOrder.LayoutOrder
leftLayout.Parent = leftPanel

-- Right panel
local rightPanel = Instance.new("Frame")
rightPanel.Name = "RightPanel"
rightPanel.Size = UDim2.new(1, -140, 1, -40)
rightPanel.Position = UDim2.new(0, 140, 0, 40)
rightPanel.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
rightPanel.Parent = frame

local rightCorner = Instance.new("UICorner")
rightCorner.CornerRadius = UDim.new(0, 12)
rightCorner.Parent = rightPanel

local rightLayout = Instance.new("UIListLayout")
rightLayout.Padding = UDim.new(0, 10)
rightLayout.SortOrder = Enum.SortOrder.LayoutOrder
rightLayout.Parent = rightPanel

-- Button creator
local function createButton(text)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(1, 0, 0, 40)
    btn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    btn.TextColor3 = Color3.fromRGB(230, 230, 230)
    btn.Font = Enum.Font.Gotham
    btn.TextSize = 18
    btn.Text = text
    btn.BorderSizePixel = 0

    local btnCorner = Instance.new("UICorner")
    btnCorner.CornerRadius = UDim.new(0, 10)
    btnCorner.Parent = btn

    return btn
end

-- Create sections
local sections = {
    "Character Scripts",
    "Teleports"
}

local contentFrames = {}

for i, sectionName in ipairs(sections) do
    local btn = createButton(sectionName)
    btn.Parent = leftPanel

    local contentFrame = Instance.new("Frame")
    contentFrame.Size = UDim2.new(1, 0, 1, -20)
    contentFrame.BackgroundTransparency = 1
    contentFrame.Visible = (i == 1)
    contentFrame.Parent = rightPanel

    local contentLayout = Instance.new("UIListLayout")
    contentLayout.SortOrder = Enum.SortOrder.LayoutOrder
    contentLayout.Padding = UDim.new(0, 8)
    contentLayout.Parent = contentFrame

    contentFrames[sectionName] = contentFrame

    btn.MouseButton1Click:Connect(function()
        for k, v in pairs(contentFrames) do
            v.Visible = false
        end
        contentFrame.Visible = true
    end)
end

-- Character Scripts content
local charFrame = contentFrames["Character Scripts"]

local speedBtn = createButton("Speed Boost (WalkSpeed = 75)")
speedBtn.Parent = charFrame

local godBtn = createButton("God Mode (Infinite Health)")
godBtn.Parent = charFrame

local jumpBtn = createButton("High Jump (JumpPower = 200)")
jumpBtn.Parent = charFrame

local disableBtn = createButton("Disable Character Scripts")
disableBtn.Parent = charFrame

speedBtn.MouseButton1Click:Connect(function()
    local _, hum = getCharacter()
    if hum then hum.WalkSpeed = 75 end
end)

godBtn.MouseButton1Click:Connect(function()
    local _, hum = getCharacter()
    if hum then
        hum.MaxHealth = math.huge
        hum.Health = math.huge
    end
end)

jumpBtn.MouseButton1Click:Connect(function()
    local _, hum = getCharacter()
    if hum then hum.JumpPower = 200 end
end)

disableBtn.MouseButton1Click:Connect(function()
    local _, hum = getCharacter()
    if hum then
        hum.WalkSpeed = 16
        hum.JumpPower = 50
        hum.MaxHealth = 100
        if hum.Health > 100 then hum.Health = 100 end
    end
end)

-- Teleports content
local tpFrame = contentFrames["Teleports"]

local islands = {
    ["Jungle Island"] = Vector3.new(-8514, 50, 2393),
    ["Frozen Island"] = Vector3.new(-2176, 14, -402),
    ["Legend Island"] = Vector3.new(4416, 1001, -3858),
    ["Mythical Island"] = Vector3.new(2397, 15, 1072),
}

for islandName, pos in pairs(islands) do
    local tpBtn = createButton(islandName)
    tpBtn.Parent = tpFrame

    tpBtn.MouseButton1Click:Connect(function()
        local _, _, root = getCharacter()
        if root then
            root.CFrame = CFrame.new(pos + Vector3.new(0,5,0))
        end
    end)
end

-- Show first section by default
contentFrames["Character Scripts"].Visible = true

-- Drag functionality
local isDragging = false
local dragInput = nil
local dragStart = nil
local startPos = nil

local function update(input)
    local delta = input.Position - dragStart
    frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

header.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        isDragging = true
        dragStart = input.Position
        startPos = frame.Position
        
        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                isDragging = false
            end
        end)
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and isDragging then
        update(input)
    end
end)

-- Minimize button
local minimized = false
minBtn.MouseButton1Click:Connect(function()
    minimized = not minimized
    if minimized then
        rightPanel.Size = UDim2.new(0, 0, 1, -40)  -- Collapse right panel
        leftPanel.Size = UDim2.new(1, 0, 1, -40)  -- Expand left panel
    else
        rightPanel.Size = UDim2.new(1, -140, 1, -40)  -- Restore right panel
        leftPanel.Size = UDim2.new(0, 130, 1, -40)  -- Restore left panel
    end
end)

-- Close button
closeBtn.MouseButton1Click:Connect(function()
    gui:Destroy()
end)
